{
	// 组件自动引入
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/find/index",
			"style": {
				"navigationBarTitleText": "发现",
				"enablePullDownRefresh": true,
				"backgroundTextStyle": "dark"
			}
		},
		{
			"path": "pages/competition/index",
			"style": {
				"navigationBarTitleText": "比赛"
			}
		},
		{
			"path": "pages/community/index",
			"style": {
				"navigationBarTitleText": "社区"
			}
		},
		{
			"path": "pages/mine/index",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#12a66a",
				"enablePullDownRefresh": true,
				"backgroundColor": "#12a66a",
				"backgroundTextStyle": "light"
			}
		},
		{
			"path": "pages/mine/personPage/index",
			"style": {
				"navigationBarTitleText": "个人主页"
			}
		},
		{
			"path": "pages/community/chatRoom/index",
			"style": {
				"navigationBarTitleText": "聊天室"
			}
		},
		{
			"path": "pages/competition/searchPage/index",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},
		{
			"path": "pages/test/index",
			"style": {
				"navigationBarTitleText": "测试页面"
			}
		}
	],
	"subPackages": [
		{
			"root": "subpackage/notification_detail",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "详情"
					}
				}
			]
		},
		{
			"root": "subpackage/personal_data",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "个人资料"
					}
				}
			]
		},
		{
			"root": "subpackage/posts",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "更多帖子",
						"onReachBottomDistance": 150
					}
				}
			]
		},
		{
			"root": "subpackage/fans_friends",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "粉丝列表"
					}
				}
			]
		},
		{
			"root": "subpackage/myCollection",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "我的收藏"
					}
				}
			]
		},
		{
			"root": "subpackage/PostWriting",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "草稿"
					}
				}
			]
		},
		{
			"root": "subpackage/subscribe",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "订阅"
					}
				}
			]
		},
		{
			"root": "subpackage/postDetail",
			"pages": [
				{
					"path": "index",
					"style": {
						"navigationBarTitleText": "帖子详情页",
						"enablePullDownRefresh": true,
						"onReachBottomDistance": 150
					}
				}
			]
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		// 默认字体颜色
		"color": "#333",
		// 选中字体颜色
		"selectedColor": "#12a66a",
		"backgroundColor": "#fff",
		"borderStyle": "white",
		"list": [
			{
				"text": "发现",
				"pagePath": "pages/find/index",
				"iconPath": "static/tab-images/find-unactive.png",
				"selectedIconPath": "static/tab-images/find-active.png"
			},
			{
				"text": "比赛",
				"pagePath": "pages/competition/index",
				"iconPath": "static/tab-images/competition-unactive.png",
				"selectedIconPath": "static/tab-images/competition-active.png"
			},
			{
				"text": "社区",
				"pagePath": "pages/community/index",
				"iconPath": "static/tab-images/community-unactive.png",
				"selectedIconPath": "static/tab-images/community-active.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/mine/index",
				"iconPath": "static/tab-images/mine-unactive.png",
				"selectedIconPath": "static/tab-images/mine-active.png"
			}
		]
	}
}